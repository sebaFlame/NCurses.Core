{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/test/NCurses.Core.Tests/NCurses.Core.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore_wsl",
            "command": "dotnet",
            "type": "process",
            "args": [
                "msbuild",
                "/t:Restore",
                "/p:RuntimeIdentifier=ubuntu.16.04-x64",
                "/p:Configuration=Debug", 
                "${workspaceFolder}/test/NCurses.Core.Tests/NCurses.Core.Tests.csproj"
            ]
        },
        {
            "label": "build_wsl",
            "command": "dotnet",
            "type": "process",
            "args": [
                "msbuild",
                "/t:Publish",
                "/p:RuntimeIdentifier=ubuntu.16.04-x64",
                "/p:Configuration=Debug", 
                "${workspaceFolder}/test/NCurses.Core.Tests/NCurses.Core.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": "restore_wsl"
        }
    ]
}