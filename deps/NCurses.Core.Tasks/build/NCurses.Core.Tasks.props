<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">
  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netcoreapp3.1</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\bin\$(Configuration)\$(TaskFolder)\NCurses.Core.Tasks.dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="NCurses.Core.Tasks.WebDownload" AssemblyFile="$(TaskAssembly)" />
  <UsingTask TaskName="NCurses.Core.Tasks.Unzip" AssemblyFile="$(TaskAssembly)" />
  <UsingTask TaskName="NCurses.Core.Tasks.LibraryVersionExtractor" AssemblyFile="$(TaskAssembly)" />
</Project>